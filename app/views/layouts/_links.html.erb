<div class="col-2">
  <h5 class="link-container">
    <%= link_to 'Home', root_path, class: "link #{@page == 'home' ? 'active' : ''}" %>
  </h5>

  <h5 class="link-container">
    <%= link_to 'Menu', menu_path, class: "link #{@page == 'menu' ? 'active' : ''}" %>
  </h5>

  <h5 class="link-container">
    <%= link_to 'Catering', catering_path, class: "link #{@page == 'catering' ? 'active' : ''}" %>
  </h5>

  <h5 class="link-container">
    <%= link_to 'More Info', info_path, class: "link #{@page == 'info' ? 'active' : ''}" %>
  </h5>

  <h5 class="link-container">
    <%= link_to 'Castomer Reviews', '', class: "link #{@page == 'reviews' ? 'active' : ''}" %>
  </h5>

  <% if current_user.present? && current_user.admin? %>
    <h4 class="link-container">
      <%= link_to 'Product List', products_path %>
    </h4>

    <h4 class="link-container">
      <%= link_to 'Categories List', categories_path %>
    </h4>
  <% end %>

</div>

<div class="col-9"></div>

<div class="col-1 p-2">
  <% if user_signed_in? %>
    <h6 class="text-white"><%= current_user.username %></h6>
    <h6><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></h6>
  <% else %>
    <h6><%= link_to 'Sign in', new_user_session_path %></h6>
    <h6><%= link_to 'Sign up', new_user_registration_path %></h6>
  <% end %>
</div>
