<h5 class="mt-5 mb-5">Products list</h5>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Price</th>
      <th>Cat</th>
      <th>Image</th>
      <th>Dairy free</th>
      <th>Gluten free</th>
      <th>Kosher</th>
      <th>Peanut free</th>
      <th>Vegan</th>
      <th>Vegetarian</th>
      <th>Available</th>
      <th>Catering</th>
      <th>Featured</th>
      <th colspan="3">Controlls</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><small><%= product.id %></small></td>
        <td><small><%= product.name %></small></td>
        <td><small><%= product.price %></small></td>
        <td><small><%= product.category.heading %></small></td>
        <td><small><%= product.image.identifier %></small></td>
        <td><small><%= product.dairy_free %></small></td>
        <td><small><%= product.gluten_free %></small></td>
        <td><small><%= product.kosher %></small></td>
        <td><small><%= product.peanut_free %></small></td>
        <td><small><%= product.vegan %></small></td>
        <td><small><%= product.vegetarian %></small></td>
        <td><small><%= product.available %></small></td>
        <td><small><%= product.catering %></small></td>
        <td><small><%= product.featured %></small></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
